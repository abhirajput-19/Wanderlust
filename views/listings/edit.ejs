<% layout("/layouts/boilerplate") -%>

<body>
  <div class="edit-form row col-8 offset-2">
    <h3 class="title">Edit your Listing</h3>
    <form
      method="post"
      action="/listings/<%= listing.id %>?_method=put"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          name="listing[description]"
          id=""
          cols="20"
          rows="2"
          class="form-control"
          required
        >
<%=listing.description%></textarea
        >
        <div class="invalid-feedback">Enter a short description</div>
      </div>
      <div class="mb-3">
        Original Listing Image <br />
        <img src="<%= originalImageUrl %>" alt="" />
      </div>
      <div class="mb-3">
        <label for="image" class="form-lable">Upload New Image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            type="number"
            name="listing[price]"
            value="<%= listing.price %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the valid country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          type="text"
          name="listing[location]"
          value="<%= listing.location %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the valid location</div>
      </div>
      <button class="btn btn-dark col-12">Add</button>
    </form>
  </div>
</body>
